<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_theme"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_header" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="10dp"
                android:paddingBottom="2dp"
                android:text="Yogita Shaje"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_user_clazz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="Class VII B"
                android:textColor="@color/c_gray_2"
                android:textSize="@dimen/f_large" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@mipmap/ic_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Dashboard"
            app:mine_icon="@mipmap/ic_menu_0" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Homework"
            app:mine_icon="@mipmap/ic_menu_1" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Attendance"
            app:mine_icon="@mipmap/ic_menu_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Fee Details"
            app:mine_icon="@mipmap/ic_menu_3" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Examination"
            app:mine_icon="@mipmap/ic_menu_4" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Report Cards"
            app:mine_icon="@mipmap/ic_menu_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Calendar"
            app:mine_icon="@mipmap/ic_menu_6" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Notice Board"
            app:mine_icon="@mipmap/ic_menu_7" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Multimedia"
            app:mine_icon="@mipmap/ic_menu_8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Academic Year"
            app:mine_icon="@mipmap/ic_menu_9" />

        <com.example.kpu.view.MyMenuView
            android:id="@+id/mmv_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:menu_text="Profile"
            app:mine_icon="@mipmap/ic_menu_10" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Logout"
            android:textColor="@color/c_pink"
            android:textSize="@dimen/f_large" />


    </LinearLayout>
</LinearLayout>